<!DOCTYPE html>
<html>
  <head>
    <title>Testing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <section class="hero is-primary is-medium">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
            Stock Screener Project
         <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            
             
          </span>
        </div>
     </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
      <h2 class="subtitle">
        <%= yield :page_subtitle %>
      </h2>
    </div>
  </div>
<!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs">
      <div class="container has-text-centred">
        <ul>
          <li><%= link_to 'Overview', root_path, class: "navbar-item" %></li>
          <li><%= link_to 'Investment strategies', strategies_path, class: "navbar-item"%></li>
          <li><%= link_to 'Indicators', indicators_path, class: "navbar-item"%></li>
          <li><%= link_to 'Companies', companies_path, class: "navbar-item"%></li>
          <li><%= link_to 'Stock Screener', screener_strategies_path, class:"navbar-item"%></li>
        </ul>
      </div>
    </nav>
  </div>
</section>

<section class="section">
  <div class="container">
	<%= yield %>
	</div>
</section>

<footer class="footer">
  <div class="container">
    Copyright Â© 2019 testing. All rights reserved.
  </div>
</footer>
</body>
</html>